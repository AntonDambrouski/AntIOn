@model ExternalLoginModel
@{
    ViewData["Title"] = "ExternalLoginConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-sm">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6 d-flex justify-content-center">
            <div>
                <h3 class="text-muted mb-3">You're almost done!</h3>
                @if (Model.Errors is not null && Model.Errors.Any())
                {
                    @foreach (var error in Model.Errors)
                    {
                        <div class="alert alert-danger" role="alert"><strong>@error.Name:</strong> @error.Message</div>
                    }
                }

                <form asp-controller="Account" asp-action="ExternalRegister" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="form-group mb-2">
                        <label class="form-label" for="name">Name:</label>
                        <input type="text" id="name" class="form-control" placeholder="Enter your name..." asp-for="Name" />
                        <span class="form-text d-block" asp-validation-for="Name"></span>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-outline-primary">Register</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</div>